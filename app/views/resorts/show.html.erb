<h1><a href="<%= @resort['href'] %>" target="_blank"><%= @resort["name"] %></a></h1>

<div class="resortback">
  <%= link_to 'Resorts', controller: 'resorts' %>
</div>

<br>

<div class="showinfo">
<h2>Current mountain conditions:</h2>
</div>

<div class="resort-wrap">
  <div class="snow">
    <h3>Powder</h3>
    <h5>Rating: <%= @resort["powder"]["rating"] %></h5>
  </div>

  <div class="weather">
    <h3>Current Weather</h3>
    <h5> <%= @resort["weather"]["conditions"] %> </h5>
  </div>

  <div class="clear"></div>

  <div class="lifttext"> <h2>Lifts in operation:</h2><h3>Status</h3> </div>
  <% @resort["lifts"]["status"].each do |lift, status| %>
  <div class="lift">
    <h5><%= lift %></h5>
    <%= status.upcase %>
  </div>
  <% end %>


